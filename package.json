{
  "name": "mpeztrack",
  "version": "0.1b",
  "description": "a codeless implementation of mixpanel-browser",
  "main": "./src/eztrack.js",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --watchAll",
    "watch": "npm-watch build",
    "serve": "./node_modules/.bin/serve ./src",
	"serveProd": "./node_modules/.bin/serve ./dist",
	"build": "npm run minBundle",	
    "minBundle": "./node_modules/.bin/esbuild ./src/eztrack.js ./src/snippet.js --bundle --minify --tree-shaking=true --outdir=./dist/ --out-extension:.js=.min.js"
  },
  "watch": {
    "build": "./src/*.js"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ak--47/mpEZTrack.git"
  },
  "author": "AK",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ak--47/mpEZTrack/issues"
  },
  "homepage": "https://github.com/ak--47/mpEZTrack#readme",
  "devDependencies": {
    "esbuild": "^0.15.7",
    "eslint": "^8.23.0",
    "esprima": "^4.0.1",
    "jest": "^29.0.3",
    "nodemon": "^2.0.19",
    "npm-watch": "^0.11.0",
    "serve": "^14.0.1"
  },
  "dependencies": {
    "mixpanel-browser": "^2.45.0",
    "query-selector-shadow-dom": "^1.0.0"
  }
}
